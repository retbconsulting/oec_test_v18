<?xml version="1.0" encoding="utf-8"?>
<odoo>
	
	<template id="new_formation">
		<t t-call="portal.portal_layout">
			<t t-set="additional_title">Nouvelle déclaration de formation</t>
			<form action="/formation/new" method="post" enctype="multipart/form-data">
				<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

				<div class="row">
					<div class="form-group col-xl-12">
						<label class="col-form-label" for="year">Année</label>
						<select class="form-control" name="year">
                            <option t-attf-value="2021">2021</option>
                            <option t-attf-value="2022">2022</option>
                        </select>
					</div>
					<div class="form-group col-xl-6">
						<label class="col-form-label" for="name">Nom</label>
						<input type="text" name="name" class="form-control" readonly="1"/>
					</div>
					<div class="form-group col-xl-6">
						<label class="col-form-label" for="prenom">Prénom</label>
						<input type="text" name="prenom" class="form-control" readonly="1"/>
					</div>
					<div class="form-group col-xl-6">
						<label class="col-form-label" for="adresse">Adresse</label>
						<input type="text" name="adresse" class="form-control" readonly="1"/>
					</div>
					<div class="col-xl-12">
                        <label class="col-form-label" style="font-size: 20px;margin-top: 20px;" for="title_1">Séminaires organisés par le CNOEC,CREOC,IFOEC  ou par des organismes de formation continue (1)</label>
                    </div>
                    <div class="col-xl-12">
                        <label class="col-form-label" style="font-size: 20px;margin-top: 20px;" for="title_2">Etudes entreprises à l'Université /établissements assimilés (2)</label>
                    </div>
                    <div class="col-xl-12">
                        <label class="col-form-label" style="font-size: 20px;margin-top: 20px;" for="title_3">Programmes d’auto Formation (3)</label>
                    </div>
                    <div class="col-xl-12">
                        <label class="col-form-label" style="font-size: 20px;margin-top: 20px;" for="title_4">Animation des formations,conférences,colloques,réunions d'information techniques  (4)</label>
                    </div>
                    <div class="col-xl-12">
                        <label class="col-form-label" style="font-size: 20px;margin-top: 20px;" for="title_5">Travaux techniques, travaux de publication, participation à des jurys (5)</label>
                    </div>
					<div class="col-xl-12">
                        <label class="col-form-label" style="font-size: 20px;margin-top: 20px;" for="title_total">TOTAL</label>
                    </div>
				</div>
				<div class="row" id="report_submit">
					<div class="col-lg-12 text-center mt32 mb32">
							<button type="submit" class="btn btn-primary float-left mb3">Enregistrer</button>
							<a href="/report/success" class="btn btn-primary float-center mb32">Soumettre</a>
						</div>
				</div>
			</form>
		</t>
	</template>
	
	
    
    <template id="portal_formations" name="Cotisations">
		<t t-call="portal.portal_layout">
			<t t-set="breadcrumbs_searchbar" t-value="True" />

			<t t-call="portal.portal_searchbar">
				<t t-set="title">Formations</t>
			</t>
			<t t-if="not formations">
				<p>There are currently no cotisation for your account.</p>
			</t>
			<t t-if="formations" t-call="portal.portal_table">
				<thead>
					<tr class="active">
						<th>#</th>
						<th class="text-left">Année</th>
						<th class="text-left">Nom</th>
						<th class="text-left">Prénom</th>
						<th class="text-left">Total Heures</th>
					</tr>
				</thead>
				<t t-foreach="formations" t-as="formation">
					<tr>
						<td class="text-left">
							#
						</td>
						<td class="text-left">
							<a t-attf-href="/formation/new/#{slug(formation)}"><span t-field="formation.year" /></a>
						</td>
						<td class="text-left">
							<span t-field="formation.partner_id.name" />
						</td>
						<td class="text-left">
							<span t-field="formation.partner_id.second_name" />
						</td>
						<td class="text-left">
							<span t-field="formation.total" />
						</td>
					</tr>
				</t>
				<br />
				<a t-attf-href="/formation/new" class="btn btn-primary float-center mb32">Nouvelle déclaration</a>
			</t>
		</t>
	</template>
	
	<template id="portal_formation_submit_success">
        <t t-call="portal.portal_layout">
            <t t-set="additional_title">Dossier Soumis</t>
            <form action="/formations" method="post">
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                <div id="wrap">
                    <div class="oe_structure">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-12">
                                    <h1 class="text-center">Félicitations!</h1>
                                    <p class="text-center">
                                        Votre déclaration a été soumis avec succès.
                                    </p>
                                </div>
                            </div>
                            <div class="row" id="o_submit">
                                <div class="col-lg-12 text-center mt32 mb32">
                                    <button type="submit" class="btn btn-primary float-center mb32 ">
                                        Continuer sur notre site Web
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </form>
        </t>
    </template>
</odoo>