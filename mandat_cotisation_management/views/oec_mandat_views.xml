    					<group>
		                	<field name="oec_mandat_ids" groups="internship_management_module.group_president_croec" readonly="1">
		                		<list>
		                			<field name="secteur_activite"/>
		                			<field name="forme_juridique"/>
		                			<field name="entite_ape"/>
		                			<field name="in_group"/>
		                		</list>
