<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    	
    	
        <record id="view_oec_formation_tree" model="ir.ui.view">
            <field name="name">oec.formation.tree</field>
            <field name="model">oec.formation</field>
            <field name="arch" type="xml">
                <list string="Formation">
                	<field name="year"/>
                	<field name="partner_id"/>
                	<field name="total"/>
                </list>
            </field>
        </record>
		
		<record id="view_oec_formation_form" model="ir.ui.view">
			<field name="name">oec.formation.tree</field>
			<field name="model">oec.formation</field>
			<field name="arch" type="xml">
				<form string="Formation">
					<header>
					</header>
					<sheet>
						<group string="ANNEE">
	                		<field name="year"/>
	                	</group>
	                	<group string="IDENTIFICATION DU CABINET">
	                		<field name="partner_id"/>
	                	</group>
						<group string="Séminaires organisés par le CNOEC,CREOC,IFOEC  ou par des organismes de formation continue (1)">
	                		<field name="oec_formation_one_ids" nolabel="1">
	                			<list editable="bottom">
	                				<field name="subject"/>
	                				<field name="hours_number"/>
	                				<field name="date"/>
	                				<field name="animateur"/>
	                				<field name="organisme"/>
	                				<field name="city"/>
	                			</list>
	                		</field>
	                	</group>
	                	<group string="Etudes entreprises à l'Université /établissements assimilés (2)">
	                		<field name="oec_formation_two_ids" nolabel="1">
	                			<list editable="bottom">
	                				<field name="subject"/>
	                				<field name="hours_number"/>
	                				<field name="date"/>
	                				<field name="animateur"/>
	                				<field name="organisme"/>
	                				<field name="city"/>
	                			</list>
	                		</field>
	                	</group>
	                	<group string="Programmes d’auto Formation (3)">
	                		<field name="oec_formation_three_ids" nolabel="1">
	                			<list editable="bottom">
	                				<field name="subject"/>
	                				<field name="hours_number"/>
	                				<field name="date"/>
	                				<field name="animateur"/>
	                				<field name="organisme"/>
	                				<field name="city"/>
	                			</list>
	                		</field>
	                	</group>
	                	<group string="Animation des formations,conférences,colloques,réunions d'information techniques  (4)">
	                		<field name="oec_formation_four_ids" nolabel="1">
	                			<list editable="bottom">
	                				<field name="subject"/>
	                				<field name="hours_number"/>
	                				<field name="date"/>
	                				<field name="animateur"/>
	                				<field name="organisme"/>
	                				<field name="city"/>
	                			</list>
	                		</field>
	                	</group>
	                	<group string="Travaux techniques, travaux de publication, participation à des jurys (5)">
	                		<field name="oec_formation_five_ids" nolabel="1">
	                			<list editable="bottom">
	                				<field name="subject"/>
	                				<field name="hours_number"/>
	                				<field name="date"/>
	                				<field name="animateur"/>
	                				<field name="organisme"/>
	                				<field name="city"/>
	                			</list>
	                		</field>
	                	</group>
	                	<group>
	                		<field name="total"/>
	                	</group>
					</sheet>
				</form>
			</field>
		</record>
		
        <record id="action_oec_formation" model="ir.actions.act_window">
            <field name="name">Formation</field>
            <field name="res_model">oec.formation</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Add a new formation
              </p>
            </field>
        </record>
		
        <menuitem 
        	name="Formations"
        	id="menu_oec_formation_root"
        	parent="menu_oec_cotisation_mandat_root"
        	sequence="3"
        />
        
        <menuitem 
        	name="Formations"
        	id="menu_oec_formation"
        	action="action_oec_formation"
        	parent="menu_oec_formation_root"
        	sequence="1"
        />
    </data>
</odoo>
