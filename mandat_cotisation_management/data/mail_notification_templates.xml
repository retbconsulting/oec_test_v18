<?xml version="1.0" ?>
<odoo>
	<data noupdate="0">
		
		<record id="email_template_cotisation_to_validate_ec"
			model="mail.template">
			<field name="name">Déclaration à valider</field>
			<field name="model_id" ref="mandat_cotisation_management.model_oec_cotisation" />
			<field name="email_from">${ctx['email_from']|safe}</field>
			<field name="email_to">${ctx['email_to']}</field>
			<field name="subject">Déclaration de cotisation pour validation</field>
			<field name="body_html" type="html">
				<div style="margin: 0px; padding: 0px;">
					<p style="margin: 0px; padding: 0px; font-size: 13px;">
						Cher(e) M. (Mme/Mlle) ${object.name} ${object.second_name},
						<br />
						<br />Votre déclaration pour l'année ${object.year} est en cours de validation. Nous vous invitons à suivre son état au niveau de votre portal.
						<br />
						Cordialement,
					</p>
				</div>
			</field>
			<field name="auto_delete" eval="True" />
		</record>
		
		<record id="email_template_cotisation_to_validate"
			model="mail.template">
			<field name="name">Déclaration à valider</field>
			<field name="model_id" ref="mandat_cotisation_management.model_oec_cotisation" />
			<field name="email_from">${ctx['email_from']|safe}</field>
			<field name="email_to">${ctx['email_to']}</field>
			<field name="subject">Déclaration de cotisation pour validation</field>
			<field name="body_html" type="html">
				<div style="margin: 0px; padding: 0px;">
					<p style="margin: 0px; padding: 0px; font-size: 13px;">
						Bonjour,
						<br />
						<br />Une nouvelle déclaration de cotisation de ${object.name} ${object.second_name} pour l'année ${object.year} a été soumise pour la validation.
						<br />
						Cordialement,
					</p>
				</div>
			</field>
			<field name="auto_delete" eval="True" />
		</record>
		
		<record id="email_template_cotisation_validated"
			model="mail.template">
			<field name="name">Déclaration validée</field>
			<field name="model_id" ref="mandat_cotisation_management.model_oec_cotisation" />
			<field name="email_from">${ctx['email_from']|safe}</field>
			<field name="email_to">${ctx['email_to']}</field>
			<field name="subject">Déclaration validée - Avis de paiement</field>
			<field name="body_html" type="html">
				<div style="margin: 0px; padding: 0px;">
					<p style="margin: 0px; padding: 0px; font-size: 13px;">
						Cher(e) M. (Mme/Mlle) ${object.name} ${object.second_name},
						<br />
						<br />Nous vous informons que votre déclaration pour l'année ${object.year} a été bien validée. Nous vous invitons de procéder au paiement et joindre le justificatif dans votre espace.
						<br />
						Cordialement,
					</p>
				</div>
			</field>
			<field name="auto_delete" eval="True" />
		</record>
		
		<record id="email_template_cotisation_rejected"
			model="mail.template">
			<field name="name">Déclaration à revoir</field>
			<field name="model_id" ref="mandat_cotisation_management.model_oec_cotisation" />
			<field name="email_from">${ctx['email_from']|safe}</field>
			<field name="email_to">${ctx['email_to']}</field>
			<field name="subject">Déclaration validée - </field>
			<field name="body_html" type="html">
				<div style="margin: 0px; padding: 0px;">
					<p style="margin: 0px; padding: 0px; font-size: 13px;">
						Cher(e) M. (Mme/Mlle) ${object.name} ${object.second_name},
						<br />
						<br />Nous vous informons que votre déclaration pour l'année ${object.year} n'a été bien validée. Veuiller trouver ci-dessous les motifs:
						<br />
							${object.reject_type}
						<br />
						<br />
						Cordialement,
					</p>
				</div>
			</field>
			<field name="auto_delete" eval="True" />
		</record>
		
		
		<record id="email_template_cotisation_to_validate_payment"
			model="mail.template">
			<field name="name">Paiement joint</field>
			<field name="model_id" ref="mandat_cotisation_management.model_oec_cotisation" />
			<field name="email_from">${ctx['email_from']|safe}</field>
			<field name="email_to">${ctx['email_to']}</field>
			<field name="subject">Paiement joint</field>
			<field name="body_html" type="html">
				<div style="margin: 0px; padding: 0px;">
					<p style="margin: 0px; padding: 0px; font-size: 13px;">
						Bonjour,
						<br />
						<br />Le justificatif du paiement pour la déclaration de cotisation de ${object.name} ${object.second_name} pour l'année ${object.year} a été joint.
						<br />
						Cordialement,
					</p>
				</div>
			</field>
			<!--<field name="report_template_ids" ref="report_cotisation_payment_recu"/>-->
			<field name="auto_delete" eval="True" />
		</record>
		
		<record id="email_template_cotisation_validated_payment"
			model="mail.template">
			<field name="name">Paiement validé + Recu de paiement</field>
			<field name="model_id" ref="mandat_cotisation_management.model_oec_cotisation" />
			<field name="email_from">${ctx['email_from']|safe}</field>
			<field name="email_to">${ctx['email_to']}</field>
			<field name="subject">Paiement validé</field>
			<field name="body_html" type="html">
				<div style="margin: 0px; padding: 0px;">
					<p style="margin: 0px; padding: 0px; font-size: 13px;">
						Cher(e) M. (Mme/Mlle) ${object.name} ${object.second_name},
						<br />
						<br />Nous vous informons que votre paiement pour l'année ${object.year} a été valide. Veuillez trouver ci-joint le reçu.
						<br />
						Cordialement,
					</p>
				</div>
			</field>
			<!--<field name="report_template_ids" ref="report_cotisation_payment_recu"/>-->
            <!--<field name="report_template_ids">${(object.year or '').replace('/','_')}</field>-->
			<field name="auto_delete" eval="True" />
		</record>
		
		<record id="email_template_cotisation_rejected_payment"
			model="mail.template">
			<field name="name">Paiement à revoir</field>
			<field name="model_id" ref="mandat_cotisation_management.model_oec_cotisation" />
			<field name="email_from">${ctx['email_from']|safe}</field>
			<field name="email_to">${ctx['email_to']}</field>
			<field name="subject">Paiement à revoir</field>
			<field name="body_html" type="html">
				<div style="margin: 0px; padding: 0px;">
					<p style="margin: 0px; padding: 0px; font-size: 13px;">
						Cher(e) M. (Mme/Mlle) ${object.name} ${object.second_name},
						<br />
						<br />Nous vous informons que votre paiement pour l'année ${object.year} n'est pas valide. Veuillez trouver ci-dessous les motifs:
						<br />
							${object.reject_payment_type}
						<br />
						<br />
						Cordialement,
					</p>
				</div>
			</field>
			<field name="auto_delete" eval="True" />
		</record>
		
	</data>
</odoo>