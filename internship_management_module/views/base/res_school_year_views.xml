<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_res_school_year_tree" model="ir.ui.view">
            <field name="name">res.partner.level.tree</field>
            <field name="model">res.school.year</field>
            <field name="arch" type="xml">
                <list string="Année scolaire" editable="bottom">
                	<field name ="name"/>
                </list>
            </field>
        </record>

		<record id="view_res_school_year_form" model="ir.ui.view">
            <field name="name">res.school.year.form</field>
            <field name="model">res.school.year</field>
            <field name="arch" type="xml">
                <form string="Rapport">
				    <sheet>
					    <group>
					    	<field name="name" />
					    </group>
					    <group>
					    	<field name="start_date" />
					    	<field name="end_date" />
    					</group> 
				    </sheet>
				</form>
            </field>
        </record>
        
        <record id="action_res_school_year" model="ir.actions.act_window">
            <field name="name">Année scolaire</field>
            <field name="res_model">res.school.year</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Add a new niveau
              </p>
            </field>
        </record>

        <menuitem 
        	name="Année scolaire"
        	id="menu_res_school_year"
        	action="action_res_school_year"
        	parent="contacts.res_partner_menu_config"
        	sequence="2"
        />
    </data>
</odoo>
