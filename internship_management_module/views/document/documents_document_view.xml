        <record id="action_documents_document_internship" model="ir.actions.act_window">
            <field name="name">Rapports de stages</field>
            <field name="res_model">documents.document</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('folder_id.name', '=', 'Rapports de stages')]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add a new internship report
                </p>
            </field>
